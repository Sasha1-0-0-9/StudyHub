<div class="pt-5">
<h1 class="pt-5" align="center"><strong>Тех. підтримка</strong></h1>
    <div class="container">    
        <div class="card shadow mb-3">
            <div class="card-body" style="background: #cccccc;">
                <div class="row"> 
                    <div class="col-12">
                      <%= form_for @contact do |f| %>

                        <div class="field">
                            <%= f.label :Тема %><br>
                            <%= f.text_field :name, :required => true %>
                        </div>

                        <div class="field">
                        <%= f.label :Запитання %><br>
                        <%= f.text_area :message,class: 'form-control', :as => :text, :required => true , rows: "3"%>    
                        </div>

                        <div class="field">
                        <%= f.label :Email %><br>
                        <%= f.email_field :email, :required => true %>
                        </div>
                        <br>
                        <div class="actions" style="text-align: center;">
                        <%= f.submit "Відправити запитання", :class => "btn btn-success btn-md" %>
                        </div>
                      <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>